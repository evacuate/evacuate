# Required value in Bluesky
BLUESKY_EMAIL="YOUR_BLUESKY_EMAIL"
BLUESKY_PASSWORD="YOUR_BLUESKY_PASSWORD" # https://bsky.app/settings/app-passwords

# Required value in Mastodon
MASTODON_URL="YOUR_MASTODON_URL" # https://mastodon.social
MASTODON_ACCESS_TOKEN="YOUR_MASTDON_ACCESS_TOKEN" # https://mastodon.social/settings/applications

# NewRelic environment variables
# See the following websites
# 1. https://docs.newrelic.com/docs/apm/agents/nodejs-agent/installation-configuration/install-nodejs-agent/
# 2. https://docs.newrelic.com/docs/apm/agents/nodejs-agent/installation-configuration/nodejs-agent-configuration/#environment

NEW_RELIC_APP_NAME="YOUR_NEW_RELIC_APP_NAME"
NEW_RELIC_LICENSE_KEY="YOUR_NEW_RELIC_LICENSE_KEY"

# Please specify if necessary
NOSTR_PRIVATE_KEY="YOUR_NOST_PRIVATE_KEY"

# Webhook URL
WEBHOOK_URL="YOUR_WEBHOOK_URL"

# Earthquake minimum scale
EARTHQUAKE_MINIMUM_SCALE="0"

ENABLE_LOGGER="true"

# Language setting (en, ja, ko, fr, es, de, it)
LANGUAGE="en"

# Hashtags (comma-separated, optional, defaults to #evacuate)
# Example: HASHTAGS="evacuate,emergency" will add #evacuate #emergency
HASHTAGS="evacuate,test"

# Japan Map Settings
ENABLE_MAP_GENERATION="true"
MAP_OUTPUT_DIR="./earthquake_images"
MAP_WIDTH="800"
MAP_HEIGHT="600"
MAP_BACKGROUND_COLOR="#F0F0F0"
MAP_JAPAN_COLOR="#CCCCCC"
MAP_EPICENTER_COLOR="#FF0000"
MAP_INTENSITY_SCALE_1_COLOR="#FFFFFF"
MAP_INTENSITY_SCALE_2_COLOR="#FFFF00"
MAP_INTENSITY_SCALE_3_COLOR="#FFCC00"
MAP_INTENSITY_SCALE_4_COLOR="#FF9900"
MAP_INTENSITY_SCALE_5_LOWER_COLOR="#FF6600"
MAP_INTENSITY_SCALE_5_UPPER_COLOR="#FF3300"
MAP_INTENSITY_SCALE_6_LOWER_COLOR="#FF0000"
MAP_INTENSITY_SCALE_6_UPPER_COLOR="#CC0000"
MAP_INTENSITY_SCALE_7_COLOR="#990000"